<h1>Histories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Word Category</th>
      <th>Score</th>
      <th>Time</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
    <% if current_user.id == history.user_id %>
      <tr>
        <td><%= history.user.name %></td>
         <td><%= history.word.category %></td>
         <td><%= history.score %></td>
         <td><%= history.player_time %></td>
         <td><%= history.created_at %></td>
        
  
